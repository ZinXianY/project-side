<div class="signin-container">
    <div class="signin-title text-center">登入</div>
    <form class="form-signin mt-3" action="/signin" method="POST" style="width: 100%,">
        <div class="form-label-group mb-3">
            <label for="email">信箱</label>
            <input type="text" name="email" id="email" class="form-control" placeholder="輸入信箱">
        </div>
        <div class="form-label-group">
            <label for="password">密碼</label>
            <input type="password" name="password" id="password" class="form-control" placeholder="輸入密碼">
        </div>
        <br>

        <div class="button-wrapper d-flex justify-content-center">
            <button class="signin-button" type="submit">登入</button>
        </div>
        <div class="button-wrapper d-flex justify-content-center">
            <a class="signup-button" href="/signup">註冊帳號</a>
        </div>
        <hr>

        <div class="button-wrapper d-flex justify-content-end">
            <a href="/auth/facebook" class="signin-facebook">
                <i class="fab fa-facebook-square"></i>
                <span>Facebook 登入</span>
            </a>
        </div>
    </form>
</div>