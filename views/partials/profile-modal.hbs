<div class="modal fade" id="profile-edit" tabindex="-1" role="dialog" aria-labelledby="profile-edit"
  style="display: none;" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <form action="/api/users/{{user.id}}" method="POST" enctype="multipart/form-data">
      <div class="modal-content">
        <div class="modal-header">
          <div class="modal-title">編輯個人資料</div>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>

        <div class="modal-body">
          <div class="row">
            <div class="avatar-wrapper" id="avatar-wrapper">
              {{#if user.avatar}}
              <img class="avatar" id="current-avatar" src="{{user.avatar}}">
              {{else}}
              <img class="avatar" id="current-avatar" src="https://i.imgur.com/iuHA5Qi.jpg">
              {{/if}}
            </div>
            <div class="form-row mb-2">
              <label for="avatar-input"><i class="fas fa-camera"></i>
                <input type="file" class="form-control-file hide" name="avatar" id="avatar-input">
              </label>
              <button type="button" class="btn-close hide" id="delete-btn" aria-label="Close"></button>
            </div>
            
            

            <div class="form-row  col-md-9">
              <label for="name">名稱</label>
              <input class="form-control" type="text" name="name" id="name" placeholder="輸入名稱" value="{{user.name}}"
                required>
            </div>
          </div>
        </div>

        <div class="modal-footer">
          <button type="submit" class="btn profile-save">儲存</button>
        </div>
      </div>
    </form>
  </div>
</div>